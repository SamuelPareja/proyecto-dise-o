---
import ExperienceItem from "./ExperienceItem.astro";
import Section from "./Section.astro";
import { experience } from "@data";
---

<Section
  title="Experiencia"
  imageUrl="/images/sombrero-de-graduacion.png"
  ref="experience"
>
  {
    experience.map(item => {
      return (
        <>
          <ExperienceItem {...item} />
          {item !== experience[experience.length - 1] && (
            <hr class="my-4 border-b border-gray-700" />
          )}
        </>
      );
    })
  }
</Section>
