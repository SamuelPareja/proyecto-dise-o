---
interface Props {
  name: string;
  description: string[];
  imageUrl: string;
  repositoryUrl: string;
  demoUrl: string;
  tags: string[];
}

const { name, description, imageUrl, repositoryUrl, demoUrl, tags }: Props = Astro.props;
---

<div class="flex items-center gap-1 py-1 px-2 bg-[#282828] rounded-full">
  <p class="text-sm">{name}</p>
  <p class="text-sm">{description}</p>
  <img src={imageUrl} alt={`Icono de ${name}`} class="size-4" />
  <p class="text-sm">{repositoryUrl}</p>
  <p class="text-sm">{demoUrl}</p>
  <p class="text-sm">{tags}</p>
</div>
