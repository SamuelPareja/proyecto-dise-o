---
interface Props {
  title: string;
  imageUrl?: string;
  ref: string;
}

const { title, imageUrl, ref } = Astro.props;
---

<section
  class="max-w-[700px] bg-custom-dark rounded-3xl px-8 py-12 mx-2 md:mx-auto mb-12"
  id={ref}
>
  <header class="flex gap-3 items-center mb-5">
    {imageUrl && <img src={imageUrl} alt={title} class="size-8" />}
    <h2 class="font-bold text-3xl">{title}</h2>
  </header>
  <slot />
</section>
